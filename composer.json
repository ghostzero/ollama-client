{
    "name": "ghostzero/ollama-client",
    "description": "API Client for Ollama written in PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "GhostZero\\Ollama\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GhostZero\\Ollama\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "René Preuß",
            "email": "rene@preuss.io"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1"
    }
}
